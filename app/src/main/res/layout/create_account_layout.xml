<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <!--nume prenume -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <EditText
                android:hint="Nume"
                android:layout_width="0dp"
                android:id="@+id/r_nume"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="datetime"

                android:imeOptions="actionNext"
                android:textSize="@dimen/text_size_detail"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <EditText
                android:hint="Prenume"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:id="@+id/r_prenume"
                android:layout_weight="1"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="datetime"

                android:textSize="@dimen/text_size_detail"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <!--user -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">
        <EditText
            android:hint="User Id"
            android:layout_width="0dp"
            android:id="@+id/r_user"
            android:imeOptions="actionNext"
            android:textAlignment="center"
            android:maxLines="1"
            android:minLines="1"
            android:layout_weight="2"
            android:inputType="text"

            android:textSize="@dimen/text_size_detail"
            android:layout_height="match_parent" />

        <EditText
            android:hint="An"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:id="@+id/r_an"
            android:layout_weight="1"
            android:maxLines="1"
            android:minLines="1"
            android:inputType="datetime"

            android:textSize="@dimen/text_size_detail"
            android:layout_height="match_parent" />

    </LinearLayout>


    <!--parola -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:hint="Parola"
            android:layout_width="match_parent"
            android:id="@+id/r_pw"
            android:imeOptions="actionNext"
            android:textAlignment="center"
            android:maxLines="1"
            android:minLines="1"
            android:inputType="text"

            android:textSize="@dimen/text_size_detail"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <!--fac nume si ID-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">
            <EditText
                android:hint="Faculate"
                android:layout_width="0dp"
                android:id="@+id/r_facn"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="datetime"
                android:imeOptions="actionNext"
                android:textSize="@dimen/text_size_detail"
                android:textAlignment="center"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <EditText
                android:hint="Id"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:id="@+id/r_facid"
                android:layout_weight="1"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="datetime"

                android:textSize="@dimen/text_size_detail"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <!--speci nuem si id-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">
            <EditText
                android:hint="Specializare"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:id="@+id/r_specn"
                android:layout_weight="2"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="text"

                android:textSize="@dimen/text_size_detail"
                android:layout_height="match_parent" />
            <EditText
                android:hint="Id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/r_spec"
                android:maxLines="1"
                android:minLines="1"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:textSize="@dimen/text_size_detail" />

        </LinearLayout>
    </RelativeLayout>


    <!--telefon-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:hint="Telefon"
            android:layout_width="match_parent"
            android:id="@+id/r_tel"
            android:maxLines="1"
            android:minLines="1"
            android:inputType="number"

            android:textAlignment="center"
            android:imeOptions="actionDone"
            android:textSize="@dimen/text_size_detail"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btn_validate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Validate"
            android:layout_weight="3"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>